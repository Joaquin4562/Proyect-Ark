<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nuevo"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Usuario"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/cuenta"
        android:ems="10"
        android:hint="NOMBRE"

        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.371" />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/contra"
        android:ems="10"
        android:hint="CONTRASEÑA"

        android:inputType="textPersonName"
        android:password="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:backgroundTint="#11000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/info" />

    <Button
        android:id="@+id/BotonIniciar"
        android:layout_width="201dp"
        android:layout_height="44dp"
        android:background="@drawable/iniciarsesionnueva"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="Iniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.63" />

    <Button
        android:id="@+id/BotonRecuperar"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:background="@drawable/recu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        android:onClick="Acceder_C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonIniciar"
        app:layout_constraintVertical_bias="0.295" />

    <Button
        android:id="@+id/BotonRegistrar"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:background="@drawable/regis"
        android:onClick="Acceder_R"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BotonRecuperar"
        app:layout_constraintVertical_bias="0.577" />

</androidx.constraintlayout.widget.ConstraintLayout>

